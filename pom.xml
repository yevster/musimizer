<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.musimizer</groupId>
    <artifactId>musimizer</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>
    <name>Musimizer</name>
    <description>Random Album Picker for Music Collections</description>
    <properties>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <!-- Set this to your JavaFX SDK lib path if needed -->
        <path.to.javafx>${env.JAVAFX_SDK}/lib</path.to.javafx>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>21.0.1</version>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>21.0.1</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>21</release>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <mainClass>com.musimizer.MainApp</mainClass>
                    <jvmArgs>
                        <jvmArg>--module-path</jvmArg>
                        <jvmArg>${env.JAVAFX_SDK}/lib</jvmArg>
                        <jvmArg>--add-modules=javafx.controls,javafx.fxml</jvmArg>
                    </jvmArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.3.1</version>
                <configuration>
                    <nonFilteredFileExtensions>
                        <nonFilteredFileExtension>png</nonFilteredFileExtension>
                    </nonFilteredFileExtensions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
<!--
If you encounter module errors, download the JavaFX SDK from https://gluonhq.com/products/javafx/ and set the JAVAFX_SDK environment variable to the SDK root.
Example: set JAVAFX_SDK=C:/javafx-sdk-21.0.1
-->
